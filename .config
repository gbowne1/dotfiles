USER=$(whoami)
LOGNAME=$USER
HOSTNAME=$(hostname)
HOME=$HOME
PWD=$PWD
OLDPWD=$OLDPWD
SHELL=$SHELL
UID=$UID

# === Execution Paths ===
PATH=$PATH
MANPATH=$MANPATH
LD_LIBRARY_PATH=$LD_LIBRARY_PATH

# === Localization & Terminal ===
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8
TZ=UTC
TERM=xterm-256color
DISPLAY=:0.0
EDITOR=nano
VISUAL=code
PAGER=less
BROWSER=firefox

# === Shell History & Behavior ===
HISTSIZE=1000
HISTFILESIZE=2000
HISTCONTROL=ignoredups:erasedups
HISTFILE=$HOME/.bash_history
PS1='[\u@\h \W]\$ '

# === XDG Standard Directories ===
XDG_CONFIG_HOME=$HOME/.config
XDG_DATA_HOME=$HOME/.local/share
XDG_CACHE_HOME=$HOME/.cache
XDG_RUNTIME_DIR=/run/user/$UID

# === Common App Variables ===
JAVA_HOME=/usr/lib/jvm/default-java
PYTHONPATH=$HOME/.local/lib/python3.10/site-packages
LS_COLORS='di=1;34:ln=1;36:so=1;35:pi=1;33:ex=1;32:bd=1;34;46:cd=1;34;43:su=30;41:sg=30;46:tw=30;42:ow=34;42'
